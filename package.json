{
  "name": "npm-pkg",
  "version": "1.0.0",
  "description": "npm package boilerplate",
  "repository": {
    "type": "git",
    "url": "https://github.com/withspectrum/npm-pkg.git"
  },
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "babel src --out-dir dist --ignore '*.test.js'",
    "test": "jest src",
    "prettier": "prettier",
    "flow-typed": "flow-typed",
    "flow": "flow"
  },
  "lint-staged": {
    "*.js": [
      "yarn run flow focus-check",
      "yarn run prettier",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "flow-bin": "^0.84.0",
    "flow-typed": "^2.5.1",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
